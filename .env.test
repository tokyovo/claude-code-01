# Test Environment Configuration
NODE_ENV=test

# Database Configuration - Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_tracker_test
DB_USER=finance_user
DB_PASSWORD=finance_password

# Use memory database for faster tests (optional)
# DB_NAME=:memory:

# Redis Configuration - Test Instance
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration - Test Keys
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_REFRESH_SECRET=test_jwt_refresh_secret_key_for_testing_only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
API_VERSION=v1

# File Upload Configuration - Test Directory
UPLOAD_PATH=./test_uploads
MAX_FILE_SIZE=5242880

# Security Configuration - Relaxed for testing
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration - Minimal for tests
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# AWS Configuration - Mock/Test Values
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_S3_BUCKET=test-bucket

# Email Configuration - Mock for testing
EMAIL_FROM=test@example.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test
SMTP_PASS=test

# Feature Flags for Testing
ENABLE_AUDIT_LOG=true
ENABLE_FILE_UPLOAD=true
ENABLE_REDIS_CACHE=false
ENABLE_EMAIL=false

# Test-specific Configuration
TEST_TIMEOUT=30000
SUPPRESS_LOGS=true